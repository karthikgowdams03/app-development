<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bgdmain">


    <TextView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SMS APPLICATION"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="#FF5722"
        />

    <TextView
        android:id="@+id/phonelbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter phone Number"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/head"
        android:textSize="20dp"
        android:textColor="#E91E63"
        />

    <EditText
        android:id="@+id/tbphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/phonelbl"
        android:inputType="phone"
        android:backgroundTint="@color/white"
        android:hint="Enter Phone Here"
        android:textColor="@color/white"
        android:textColorHint="#673AB7"/>
    <TextView
        android:id="@+id/messagelbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Message"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tbphone"
        android:textSize="20dp"
        android:textColor="#E91E63"
        />

    <EditText
        android:id="@+id/tbmessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/messagelbl"
        android:backgroundTint="@color/white"
        android:inputType="text|textMultiLine|textCapSentences"
        android:hint="Enter Message Here"
        android:textColor="@color/white"
        android:textColorHint="#673AB7"/>

    <Button
        android:id="@+id/sendBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tbmessage"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="send"
        android:onClick="save"
        android:backgroundTint="FF5722"
        />


</RelativeLayout>
